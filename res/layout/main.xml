<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:hapticFeedbackEnabled="true" android:background="@drawable/background" android:gravity="center_horizontal">
    <TableLayout android:layout_height="wrap_content" android:id="@+id/tableLayout1" android:layout_width="wrap_content">
        <TableRow android:layout_width="fill_parent" android:id="@+id/tableRow2" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:typeface="sans" android:textColor="#0F0" android:layout_gravity="right|center_vertical" android:text="Bill $" android:textSize="30dip" android:textStyle="bold|italic"></TextView>
            <EditText android:layout_height="wrap_content" android:id="@+id/bill" android:inputType="number|numberDecimal" android:textColor="#0F0" android:tag="Bill" android:gravity="center" android:lines="1" android:textSize="24dip" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_width="100dip"></EditText>
        </TableRow>
        <TableRow android:layout_width="fill_parent" android:id="@+id/tableRow1" android:layout_height="wrap_content">
            <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tip" android:layout_gravity="right|center_vertical" android:textColor="#0F0" android:textSize="30dip" android:textStyle="bold|italic"></TextView>
            <com.aeidesign.tipcalc.kankan.wheel.widget.WheelView android:layout_gravity="center_vertical" android:id="@+id/percentage" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="5dip" android:layout_width="fill_parent" android:layout_height="80dip"></com.aeidesign.tipcalc.kankan.wheel.widget.WheelView>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_height="wrap_content" android:layout_width="fill_parent">
            <TextView android:id="@+id/textView2" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Split" android:layout_gravity="right|center_vertical" android:textColor="#0F0" android:textSize="30dip" android:textStyle="bold|italic"></TextView>
            <com.aeidesign.tipcalc.kankan.wheel.widget.WheelView android:layout_gravity="center_vertical" android:id="@+id/split" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="5dip" android:layout_width="fill_parent" android:layout_height="80dip"></com.aeidesign.tipcalc.kankan.wheel.widget.WheelView>
            <TextView android:layout_gravity="center" android:id="@+id/TextView01" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="ways" android:textColor="#0F0" android:textSize="30dip" android:textStyle="bold|italic"></TextView>
        </TableRow>
    </TableLayout>
    <CheckBox android:layout_height="wrap_content" android:text="Round to nearest dollar" android:layout_width="wrap_content" android:id="@+id/round" android:checked="true" android:layout_gravity="center" android:textSize="20dip" android:textStyle="italic" android:textColor="#0F0"></CheckBox>
    <TextView android:textColor="#0F0" android:textStyle="bold" android:layout_width="wrap_content" android:typeface="sans" android:layout_gravity="center" android:layout_height="wrap_content" android:textSize="30dip" android:text="Tip  $0" android:id="@+id/tip_total" android:layout_marginTop="5dip"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/total" android:textStyle="bold" android:textColor="#0F0" android:typeface="sans" android:layout_gravity="center" android:text="Total  $0" android:textSize="40dip"></TextView>
    <TextView android:textColor="#0F0" android:textStyle="bold" android:layout_width="wrap_content" android:typeface="sans" android:layout_gravity="center" android:layout_height="wrap_content" android:textSize="30dip" android:id="@+id/split_total"></TextView>
<com.google.ads.AdView android:id="@+id/adView" android:layout_height="wrap_content" ads:adUnitId="a14e68c84443ab4" ads:adSize="BANNER" ads:loadAdOnCreate="true" android:layout_width="fill_parent"/>
</LinearLayout>